using System;
using System.Net;
using System.Net.Sockets;
using System.Text;
using System.Threading;

class Server
{
    static TcpListener tcpListener;
    static Thread listenerThread;

    static void Main(string[] args)
    {
        // Vendosja e IP adresës dhe numrit të portit
        IPAddress ipAddress = IPAddress.Parse("127.0.0.1"); // Mund ta ndryshoni me IP-in tuaj
        int port = 12345; // Mund ta ndryshoni me portin tuaj të preferuar

        tcpListener = new TcpListener(ipAddress, port);
        listenerThread = new Thread(new ThreadStart(ListenForClients));
        listenerThread.Start();
    }

    private static void ListenForClients()
    {
        tcpListener.Start();

        Console.WriteLine("Serveri është në pritje për lidhje...");

        while (true)
        {
            // Blokonohet derisa një klient lidhet
            TcpClient client = tcpListener.AcceptTcpClient();

            // Krijimi i një thread të ri për të përpunuar kërkesat e klientit
            Thread clientThread = new Thread(new ParameterizedThreadStart(HandleClientComm));
            clientThread.Start(client);
        }
    }

    private static void HandleClientComm(object clientObj)
    {
        TcpClient tcpClient = (TcpClient)clientObj;
        NetworkStream clientStream = tcpClient.GetStream();

        byte[] message = new byte[4096];
        int bytesRead;

        while (true)
        {
            bytesRead = 0;

            try
            {
                // Lexo mesazhin nga klienti
                bytesRead = clientStream.Read(message, 0, 4096);
            }
            catch
            {
                break;
            }

            if (bytesRead == 0)
                break;

            // Përpuno mesazhin
            string clientMessage = Encoding.ASCII.GetString(message, 0, bytesRead);
            Console.WriteLine("Mesazhi nga klienti: " + clientMessage);

            // Këtu mund të shtoni logjikën për të përpunuar kërkesat e klientit
            // Për shembull, mund të ekzekutoni komandat për qasje në folderat/file-t
            // dhe të dërgoni përgjigje mbrapa në klient

            // Për shembull:
            // string response = ExecuteCommand(clientMessage);
            // byte[] data = Encoding.ASCII.GetBytes(response);
            // clientStream.Write(data, 0, data.Length);
        }

        tcpClient.Close();
    }

    // Shembull i një metode për ekzekutimin e komandave
    private static string ExecuteCommand(string command)
    {
        // Implementoni logjikën tuaj për ekzekutimin e komandave këtu
        return "Përgjigje nga serveri: Komanda u ekzekutua me sukses!";
    }
}
